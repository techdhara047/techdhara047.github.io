---
import '../styles/team.css'
import RightNav from "../components/right-nav.astro";
import FixedNav from "../components/fixed-nav.astro";
import MobileNav from "../components/mobile-nav.astro";
import ThemeButton from "../components/theme-button.astro";
import LogoBox from '../components/logo-box.astro';
import SocialMedia from '../components/social-media.astro'
const style = {display:"flex", flexDirection:"column",gap:"2rem"}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="google-site-verification" content="he8JEZNJ6iyHnfLMAO74rp65pER43MjRRx2uDz_ik8E" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>TechDhara</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
	</head>
	<body>	
		<div class="container">
			<header>
				<nav>
					<a class="home" href="/"><LogoBox /></a>
					<div class="social"><SocialMedia style={style}/></div>
				</nav>
			</header>
			<main><slot /></main>	
		</div>
	</body>
</html>
<style>
	.container{
		display: flex;
   
    }
	  header {
        background-color: var( --header-bg-color);  
		padding: 3rem 0.4rem;
		position: sticky;
		top: 0;
		height: 100vh;
    }
    nav {
		height: 100%;

		color: white;
		display: flex;
		flex-direction: column;

		
    }
	.social {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	main{
     
	 padding:1rem max(3%,8rem);
	 margin-top: 0;
	 flex: 1;
 }
 @media only screen and (max-width: 600px) {
	.container{
		display: flex;
		flex-direction: column;
    }
	header {
        background-color: var( --header-bg-color);  
		padding: 0.6rem 1rem;
		position: sticky;
		top: 0;
		height: auto
    }
	.social {
		display: none;
	}
	main {
		padding: 1rem;
	}
}
   
</style>